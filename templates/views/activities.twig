{% extends "../layouts/base.twig" %}

{% block head %}

	<meta name="description" content="">
	<meta name="keywords" content="">

	<title>Actividades | Sport & Fitness</title>

	<!-- Facebook / whatsapp Open Graph meta tags -->
	<meta property="og:type" content="website"/>
	<meta property="og:title" content="Actividades | Sport & Fitness"/>
	<meta property="og:image" content="http://{{ url.fullUrl }}/static/site/img/share/actividades.jpg"/>
	<meta property="og:url" content="http://{{ url.fullUrl }}"/>
	<meta property="og:description" content=""/>
	<meta property="og:site_name" content="Sport & Fitness"/>

	<!-- Twitter Card meta tags -->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:title" content="Actividades | Sport & Fitness"/>
	<meta name="twitter:image" content="http://{{ url.fullUrl }}/static/noticias/img/share/actividades.jpg"/>
	<meta name="twitter:site" content="http://{{ url.fullUrl }}"/>
	<meta name="twitter:description" content=""/>
	<meta name="twitter:creator" content="@"/>

	<link rel="canonical" href="http://{{ url.fullUrl }}">

{% endblock %}

{% block content %}

	<div class="activities">
		<div class="activities__container">
			<h1 class="activities__title">Actividades fitness</h1>

			<ul class="activities-list">
				<li class="activities-list__item">
					<button class="activities-list__btn activityBtn">
						<div class="activityVideo activities-list__video" data-video="/videos/test.mp4"></div>
						<img src="/images/activity.jpg" alt="" class="activities-list__img">
						<h2 class="activities-list__title">Entrenamiento en suspensión</h2>
					</button>
				</li>
			</ul>

		</div>
	</div>

	<div class="activity-popup">
		<div class="activity-popup__top">
			<div class="activity-popup__top__left">
				<h2 class="activity-popup__title">Entrenamiento en suspensión</h2>
			</div>
			<div class="activity-popup__top__right">
				<span class="activity-popup__icon-calories"></span>
				<p class="activity-popup__calories">700 calorías quemadas por clase</p>
			</div>
		</div>
		<div class="activity-popup__bottom">
			<div class="activity-popup__bottom__left">
				<p class="activity-popup__description">Lorem ipsum dolor sit amet, vis ex dolore suscipit recusabo. Nam eros diceret ut, eu mei dicat eirmod. Sed elit interesset ne. Ex audiam scriptorem pro, ius erant phaedrum honestatis cu.</p>
			</div>
			<div class="activity-popup__bottom__right">
				<div class="activity-popup__branches">
					<p class="activity-popup__subtitle">Encuéntrala en:</p>
					<a href="#" class="activity-popup__branch" title="Sucursal Ajusco">Sucursal Ajusco</a>
				</div>
				<a href="#" class="activity-popup__play" title="Ver video"><span class="activity-popup__icon-play"></span></a>
			</div>
		</div>
		<button class="activity-popup__close">x</button>
	</div>

{% endblock %}

{% block js %}
	<script src="/js/activities.js"></script>
{% endblock %}